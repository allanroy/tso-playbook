{% for server in servers %}
- name: Check if remote {{ server }} host port 22
  wait_for: host={{ server }} port=22 timeout=1
  ignore_errors: True
  register: result
  when: ansible_hostname != server

- name: Save result in CSV
  shell: printf "\n,{{ server }} port 22 is {% if result.failed %}closed{% else %}open{% endif %}"  >> /tmp/{{ ansible_hostname }}_output.csv
  args:
    executable: /bin/bash
  when: ansible_hostname != server

